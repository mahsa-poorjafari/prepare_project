-if is_admin?
  
  .fa
    %h1= 'صفحات متنی'
    
    %table.table
      - @pages.each do |page|
        %tr
          %td= page.ptitle
          - if is_admin?
            %td
              = link_to 'مشاهده', page
              \|
              = link_to 'ویرایش', edit_page_path(page)
              \|
              = link_to 'حذف', page, :method => :delete, :data => { :confirm => 'آیا مطمئن هستید؟' }




