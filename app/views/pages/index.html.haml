%h1= 'صفحات متنی'
= link_to 'صفحه جدید', new_page_path, :class => "btn"
%table.table
  - @pages.each do |page|
    %tr
      %td= page.title
      
      %td= link_to 'Show', page
      %td= link_to 'Edit', edit_page_path(page)
      %td= link_to 'Destroy', page, :method => :delete, :data => { :confirm => 'آیا مطمئن هستید؟' }




