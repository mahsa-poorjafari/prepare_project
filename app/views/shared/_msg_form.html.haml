.well.small-form
  %fieldset
    %legend
      %span= " تماس با ما"        
      =image_tag "msg-icon.png"
  = form_for @message ||= Message.new, :html => {:class => "contact"} do |f|
    - if @message.errors.any?
      #error_explanation
        %ul
          - @message.errors.each do |attr, msg|
            %li= msg
    
        
    -if flash[:notice]        
      .alert.alert-success= notice
        
    .clrear-float 
    .form-group
      = f.label "نام",  :class => "control-label"    
      %span.Necessary= "ضروری"
      = f.text_field :user_name, :class => "form-control"
     
      
      
    .form-group
      = f.label " ایمیل",  :class => "control-label"
      %span.Necessary= "ضروری"
      = f.text_field :email, :class => "form-control"
      
      
      
    .form-group
      = f.label " تلفن",  :class => "control-label"
      = f.text_field :phone, :class => "form-control"
      
    .form-group
      = f.label "پیام",  :class => "control-label"
      %span.Necessary=  "ضروری"
      = f.text_area :text, :class => "form-control"
      
           
    .form-group
      = f.submit 'ارسال', :class=>"btn btn-primary btn-xs"
%br
