-if is_admin?
  .admin-link.fa
    %p= 'منوی صفحه'
    %hr
    = link_to 'کاتالوگ جدید', new_catalogue_path, :title => "رنگین کمان"
    

.col-sm-12
  %h1= t('catalog')
  .catalog
    - @catalogues.each do |catalogue|
      .col-sm-4
        = catalogue.title
        = image_tag catalogue.image(:medium), :width => "250", :height => "250", :title => catalogue.title_fa, :alt => catalogue.title_fa
        - if is_admin?
          = link_to 'ویرایش', edit_catalogue_path(catalogue), :title => catalogue.title_fa
          \|
          = link_to 'حذف', catalogue, :method => :delete, :data => { :confirm => 'آیا مطمئن هستید؟' }, :title => catalogue.title_fa
       




