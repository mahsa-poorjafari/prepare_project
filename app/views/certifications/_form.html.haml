= form_for @certification do |f|
  - if @certification.errors.any?
    #error_explanation
      %h2= "#{pluralize(@certification.errors.count, "error")} prohibited this certification from being saved:"
      %ul
        - @certification.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title_fa
    = f.text_field :title_fa
  .field
    = f.label :title_en
    = f.text_field :title_en
  .actions
    = f.submit 'Save'
