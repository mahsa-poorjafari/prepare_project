.product-bg
  -if is_admin?
    .admin-link.fa
      %p= 'منوی صفحه'
      %hr
      = link_to 'تعریف مدل جدید', new_product_path
  .products.set-center
    - @products.each do |product|      
      .pro_wrapper{align: "center", :id => I18n.locale}                
        = link_to product do
          .pro-info  
            = image_tag product.pictures.first.image(:small)
          .line
            %b= product.title 
        
      

   





