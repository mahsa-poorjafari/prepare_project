= image_tag 'lobby.jpg', :class => "bg"   
%p#notice= notice

-if is_admin?
  .admin-link.fa
    %p= 'منوی صفحه'
    %hr
    = link_to 'ویرایش', edit_product_path(@product)    
    \|
    = link_to 'حذف', @product, :method => :delete, :data => { :confirm => 'آیا مطمئن هستید؟' }   
    \|
    = link_to 'بازگشت', products_path 
      

.category-info.general
  %div
    .line.set-center  
      = image_tag 'cat-title.png'
      .go-up.set-center.title-cat= @product.title
    .category-link 
      %b= @pro_category
      .cat-link
        %p= @product.description          
 
.product_show_pics
  .product-details
    .model-pro
      =link_to (image_tag  @product.image(:small), :class => "sample"), @product.image(:large), :data => { :colorbox => true }, :title =>  @product.title, :class => "show-product"
    - @product.pictures.each do |picture|
      .model-pro      
        =link_to (image_tag  picture.image(:small), :class => "sample"), picture.image(:large), :data => { :colorbox => true }, :title =>  picture.title, :class => "show-product"
        - if is_admin?
          %div
            = link_to 'ویرایش', edit_picture_path(picture)
            \|
            = link_to 'حذف', picture, :method => :delete, :data => { :confirm => 'آیا مطمئن هستید؟' }
          
        .go-download
          = link_to  download_product_path(:picture_id =>  picture.id) do
            = image_tag 'dnwn.png', :style => "height:30px; width:30px;"
            = t ('download')
        - if picture.coming_soon
          = image_tag 'coming-soon.png', :class => "coming-soon", :style => 'margin-right:-52%; margin-top:-132%'
  
.control{:style => "margin-top:5%"}           
  .prev
    = image_tag 'go-up.png'
  .next
    = image_tag 'go-down.png'       
.clr-float
  
:javascript
  $('.control .next').click(function(){
      $('.product-details').animate({marginTop:"+=200px"});
    });
      
  $('.control .prev').click(function(){
    $('.product-details').animate({marginTop:"-=200px"});
  });
