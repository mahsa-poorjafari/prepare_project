= image_tag 'lobby.jpg', :class => "bg"   
%p#notice= notice

-if is_admin?
  .admin-link.fa
    %p= 'منوی صفحه'
    %hr
    = link_to 'ویرایش', edit_product_path(@product)    
    \|
    = link_to 'حذف', @product, :method => :delete, :data => { :confirm => 'آیا مطمئن هستید؟' }   
    \|
    = link_to 'بازگشت', products_path 
      

.box-3 
  %p    
    = @product.category.title
  %hr
  %p   
    = @product.title
  %p    
    = @product.description
 
    
.box-3{:style => "height:auto"} 
  .product-pics-large.set-center
    =link_to (image_tag  @product.image(:medium)), @product.image(:large), :data => { :colorbox => true }, :title =>  @product.description, :class => "show-product"
    .go-download
      = link_to  download_product_path(:image_id =>  @product.id) do
        = image_tag 'dnwn.png', :style => "height:30px; width:30px;"
        = t ('download')
            

