%p#notice= notice
-if is_admin?
  .admin-link.fa
    %p= 'منوی صفحه'
    %hr
    = link_to 'ویرایش', edit_product_path(@product)    
    \|
    = link_to 'حذف', @product, :method => :delete, :data => { :confirm => 'آیا مطمئن هستید؟' }   
    \|
    = link_to 'بازگشت', products_path 
      

    
.col-sm-4
  %p   
    = @product.title
  %p    
    = @product.description
  %p    
    = @product.category.title
  
.col-sm-4  
  .product-pics-large
    =link_to (image_tag  @product.image(:medium)), @product.image(:large), :data => { :colorbox => true }, :title =>  @product.description         
    .download
      = link_to  download_product_path(:image_id =>  @product.id) do
        = image_tag 'dnwn.png'
        = t ('download')
          

