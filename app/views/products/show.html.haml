%p#notice= notice
.col-sm-4
  %p   
    = @product.title
  %p    
    = @product.description
  %p    
    = @product.category.title
  
.col-sm-4
  - @product.pictures.each do |pic|
    .product-pics
      =link_to (image_tag pic.image(:medium)), pic.image(:large), :data => { :colorbox => true }, :title => pic.description         
    

= link_to  edit_product_path(@product) do
  = image_tag 'edit.png'      
= link_to products_path do
  = image_tag 'back.png'
