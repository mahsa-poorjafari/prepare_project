!!!
%html
  %head
    %title 
      = t("rainbow") + ', ' + Category.all.collect(&:title).join(",") #{@head.fetch(:title, '') if @head}
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = favicon_link_tag 'favicon.png', rel:'shortcut icon', type: 'image/png'
    = csrf_meta_tags
    %meta{:charset => "utf-8"}
    %meta{:content => "nOoVpAxZ_Ar6ZdmxkY5c4VCoMHun48M3-LKgD8kxlk4", :name => "google-site-verification"}
    %meta{:name => "keywords", :content => Category.all.collect(&:title_fa).join(",") + ','+ Category.all.collect(&:title_en).join(",") } 
    %meta{:name => "description", :content => "Rainbow_Trading_Co, شرکت بازرگانی رنگین کمان, کاغذ دیواری, پارکت, کفپوش مایع , پارکت طلایی مات, پارکت طلایی براق, کاغذدیواری الیزابت دو, کاغذدیواری پرفکت, کاغذدیواری لکسی, کفپوش مایع اکلیلی, کفپوش مایع شفاف, کفپوش مایع مات, کاغذدیواری" }
    %meta{:name => "robots", :content => "NOODP"}
    = yield(:refresh_meta) if content_for?(:refresh_meta)
    -# - unless is_admin? 
    -#     
      :javascript
        <!--
        //Disable right click script
        //visit http://www.rainbow.arch.scriptmania.com/scripts/
        var message="Sorry, right-click has been disabled";
        ///////////////////////////////////
        function clickIE() {if (document.all) {(message);return false;}}
        function clickNS(e) {if
        (document.layers||(document.getElementById&&!document.all)) {
        if (e.which==2||e.which==3) {(message);return false;}}}
        if (document.layers)
        {document.captureEvents(Event.MOUSEDOWN);document.onmousedown=clickNS;}
        else{document.onmouseup=clickNS;document.oncontextmenu=clickIE;}
        document.oncontextmenu=new Function("return false")
        // -->
        
  %body     

    %header
      #header-top        
      #logo-menu
        #quick-bar
          %span                 
            = link_to ( image_tag 'GB.png', :alt => "Rainbow_Trading_Co", :title => "Rainbow_Trading_Co"  ), locale: :en                
            = link_to ( image_tag 'IR.png', :alt => "رنگین کمان", :title => "رنگین کمان"  ), locale: :fa
        .logo-style  
          
          #logo              
            = image_tag "logo.png", :title => "شرکت بازرگانی رنگین کمان", :alt => "شرکت بازرگانی رنگین کمان"
          .title-site              
            %h3= t('rainbow')
        #mainmenu
          %nav
            -if I18n.locale == :fa        
              .menu_fa{:class => I18n.locale}
                = render "shared/menu"
            - else
              .menu_en{:class => I18n.locale}
                = render "shared/menu"
                  
    #content{:class => I18n.locale}        
      = yield
    %footer{:class => I18n.locale}
      #header-top
      = render "shared/footer"
