= form_for @category do |f|
  - if @category.errors.any?
    #error_explanation      
      %ul
        - @category.errors.each do |attr, msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field  
    = f.label " تصویر نمونه:"
    = f.file_field :image
  .actions
    = f.submit 'Save'
