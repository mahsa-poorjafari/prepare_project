.info-holder
  -if is_admin?
    .admin-link.fa
      %p= 'منوی صفحه'
      %hr
      = link_to 'ویرایش', edit_category_path(@category)
      \|
      = link_to 'حذف', @category, :method => :delete, :data => { :confirm => 'آیا مطمئن هستید؟' }
      \|
      = link_to 'بازگشت', categories_path
  = image_tag 'slide12.jpg', :class => "bg"  
  
  .category-info.general
    %div
      .line.set-center  
        = image_tag 'cat-title.png'
        .go-up.set-center.title-cat= @category.title
      .category-link 
        .cat-link
          =raw (@category.description)
        %ul#banner          
          - if @category.products.present?
            %li
              = link_to t('model'), '#pictures', :id => "show-model"
          
          - if @category.maintaion.present?
            %li
              = link_to t('maintain'), '#maintaion', :id => "show-main"
          
          - if @category.installation.present?
            %li
              = link_to t('technical'), '#installation', :id => "show-inst"
          
          - if @category.warranty.present?
            %li
              = link_to t('warranty'), '#installation', :id => "show-war"
          
          - if @category.certifications.present?
            %li
              = link_to t('certificate'), '#cer', :id => "show-cer"          
            
         
  #category-details{:style => "margin-right:25%"}    
    .col-sm-8.details.bg-opacity#installation
      .box-title{:class => I18n.locale}= t('technical')
      %p=raw @category.installation
      
    .col-sm-8.details.bg-opacity#maintaion
      .box-title{:class => I18n.locale}= t('maintain')
      %p=raw @category.maintaion
      
    .col-sm-8.details.bg-opacity#warranty
      .box-title{:class => I18n.locale}= t('warranty')
      %p=raw @category.warranty
    
    .row#pictures
      .all-models.details.col-sm-8
        - if @category.sub_categories.present?
          - @category.sub_categories.each do |sub_category|            
          
            .product-pics#gold                              
              - if is_admin?  
                %div.admin-link-on-box.set-center
                  = link_to 'ویرایش', edit_sub_category_path(sub_category)    
                  \|
                  = link_to 'حذف', sub_category, :method => :delete, :data => { :confirm => 'آیا مطمئن هستید؟' } 
              .title-product
                = sub_category.title
              .img-box
                = image_tag sub_category.image(:medium), :class => "sample"
              - if sub_category.comming_soon
                = image_tag 'coming-soon.png', :class => "coming-soon", :style => 'margin-right: -61%;margin-top: -123%; display:none'  
          
            
            - sub_category.products.each_slice(4) do |products|                            
              %div.sub-category-title
                = sub_category.title
              .col-sm-8
                - products.each do |product|                                                 
                  .product-pics#sub_category{:style => " min-height:200px; max-height:200px"}                          
                    - if is_admin?
                      %div.admin-link-on-box.set-center                    
                        = link_to 'ویرایش', edit_product_path(product)    
                        \|
                        = link_to 'حذف', product, :method => :delete, :data => { :confirm => 'آیا مطمئن هستید؟' } 
                    = link_to  product, :category_id => @category.id do  
                      .title-sub-category
                        = product.title
                      .img-box
                        = image_tag product.image(:medium), :class => "sample-sub-category"
                    - if product.coming_soon
                      = image_tag 'coming-soon.png', :class => "coming-soon", :style => 'margin-right: -36%;margin-top: -198%;'  
                    
          .sub-cat-link.col-sm-3
            - @category.sub_categories.each do |sub_category|               
              .sub-category-product-pics
                .title-product
                  = sub_category.title
                .img-box
                  = image_tag sub_category.image(:small), :class => "sample"
                - if sub_category.comming_soon
                  = image_tag 'coming-soon.png', :class => "coming-soon", :style => 'margin-right: -21%;margin-top: -108%;width: 77%; display:none'  
              
                
        - else
          - @category.products.each_slice(4) do |products|
            #product-holder{:style => "margin-left:5%"}
              -products.each do |product|                 
                .product-pics                                                 
                  = link_to  product, :category_id => @category.id do                    
                    - if is_admin?
                      %div.admin-link-on-box.set-center
                        = link_to 'ویرایش', edit_product_path(product)    
                        \|
                        = link_to 'حذف', product, :method => :delete, :data => { :confirm => 'آیا مطمئن هستید؟' } 
                    .title-product
                      = product.title
                    .img-box
                      = image_tag product.image(:medium), :class => "sample"
                  - if product.coming_soon
                    = image_tag 'coming-soon.png', :class => "coming-soon", :style => 'margin-right:-62%; margin-top:-118%; display:none'  
                  
      .clr-float
         
      .clr-float
    %div#certification
      = link_to "", "#",:name => "cer"
      .all-models.details.col-sm-8      
        .box-title{:class => I18n.locale, :style => "color:#FFFF58; margin-top:-5%; text-shadow:2px 2px #390E00 "}= t('certificate')
        #show-all-certificate        
          - @category.certifications.each do |certification|      
            .col-sm-3.box-3.pro-cer{:style => "text-align:center"}
              =link_to (image_tag certification.image(:small), :style => "height:50%"), certification.image(:original), :target => "_blank"
              .cer-title= certification.title
      
      
      .clr-float
      
:javascript
  $( document ).ready(function() {
    $('#category-details').children().hide(); 
    $('#pictures').show(1000);
  });
  
  $('#show-cer').click(function(){   
    $('#category-details').children().hide(); 
    $('#certification').show(1000);
    
  });
  $('#show-model').click(function(){   
    $('#category-details').children().hide(); 
    $('#pictures').show(1000);    
    
  });

  $('#show-main').click(function(){          
    $('#category-details').children().hide(); 
    $('#maintaion').fadeIn(1000);
    
  });

  $('#show-inst').click(function(){          
    $('#category-details').children().hide(); 
    $('#installation').fadeIn(1000);
    
  });

  $('#show-war').click(function(){          
    $('#category-details').children().hide(); 
    $('#warranty').fadeIn(1000);    
  });

  $('.product-pics#gold').click(function(){
    $(this).hide(50);
    $('.product-pics#sub_category').show(500);
    $('div.sub-category-title').show(500);
    $('.sub-cat-link').show(500);    
    $(".product-pics#gold").not($(this)).hide();
  });

  
  $('.coming-soon').fadeIn(1000);
