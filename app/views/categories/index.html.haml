
-if is_admin?
  .admin-link.fa
    %p= 'منوی صفحه'
    %hr
    = link_to 'تعریف محصول جدید', new_category_path
= image_tag 'slide4.jpg', :style => "z-index:-20; position:fixed"
.show-pro.set-center 
  - @categories.each do |category|
    .box-3.set-center{align: "center", :class => I18n.locale}                
      - if is_admin?  
        .link-del
          = link_to 'ویرایش', edit_category_path(category)
          = link_to 'حذف', category, :method => :delete, :data => { :confirm => 'آیا مطمئن هستید؟' }
      = link_to category do         
      
        %p= category.title 
        .category-image
          = image_tag category.image(:small)
      
      .box-menu           
        .arrow-vertical
        %ul
          - if category.products.present?
            %li= link_to t('model'), category#pictures
          - if category.installation.present?
            %li= link_to t('technical'), category#installation
          - if category.maintaion.present?
            %li= link_to t('maintain'), category#maintaion
          - if category.warranty.present?
            %li= link_to t('warranty'), category#warranty

      
        
      
