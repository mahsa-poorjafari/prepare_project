= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %ul
        - @user.errors.each do |attr, msg|
          %li= msg

  .field
    = f.label :email
    = f.text_area :email
  .field
    = f.label :user_name
    = f.text_field :user_name
  .field
    = f.label :password
    = f.text_field :password
  .actions
    = f.submit 'Save'
